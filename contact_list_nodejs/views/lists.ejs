<html>

<head>

    <title>
        <%=locals.title%>
    </title>
    <script src="https://kit.fontawesome.com/c5e7281719.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width,intial-scale=6">

    <link rel="stylesheet"  href="../assets/contactt.css">
</head>

<body>

    <div id="contact-heading">
        <h1>
            <i class="fas fa-address-book"></i>
           My Contact List 
        </h1>
    </div>

    <div class="contact-container">

        <ul>
            <% for(let i of contact_list)
            { %>
                 
                <li class="details">
                    <div class="contact-row">
                    <p><%= i.name %></p>
                    <p id="phn"><%= i.phone %></p>
                    </div>

                    

                    <span class="delete-button">
                        
                            <a href="/delete-contact/?phone=<%=i.phone%>">
                        <i class="fas fa-window-close" id="btn-i"></i>
                           </a>
                       
                   
                    </span>
                </li>
                </div>
            <%}%>

            <div class="form-class">
              <form action="create-contact" method="post" >

                <input type="text" name="name" id="name" placeholder="Enter name" required>
                
                <input type="text" name="phone" id="phone" placeholder="Enter phone no." required>

                <button type="submit" id="btn">Add contact</button>

               
              </form>
              </div>

        </ul>
    </div>
    <script type="text/javascript" src="contactt.js"></script>
</body>
</html>